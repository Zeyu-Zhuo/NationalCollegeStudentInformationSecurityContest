<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/alipayBlue</item>
        <item name="colorPrimaryDark">@color/alipayBlue</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>
    </style>

    <style name="Theme.AppCompat.Light.Dialog.Alert.Self" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/alipayBlue</item>
    </style>

    <!--new pay-->
    <style name="themeColor" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/alipayBlue</item>
        <item name="colorControlActivated">@color/alipayBlue</item>
        <item name="android:editTextColor">@color/colorBlack</item>
    </style>

    <style name="positionIndicator">
        <item name="android:textColor">@color/alipayBlue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="positionIndicatorCurrent" parent="positionIndicator">
        <!--<item name="android:textColor">#da7c80b8</item>-->
        <item name="android:textColor">@color/alipayBlue</item>
    </style>

    <!--主界面-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--账单-->
    <style name="style_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_gray_s16" parent="@style/style_wrap_content">
        <item name="android:textColor">@color/color_646464</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_gray_s14" parent="@style/style_wrap_content">
        <item name="android:textColor">@color/color_646464</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="style_gray_s20" parent="@style/style_wrap_content">
        <item name="android:textColor">@color/color_646464</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_little_gray_s14" parent="@style/style_wrap_content">
        <item name="android:textColor">@color/color_d7d7d7</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="style_black_s18" parent="@style/style_wrap_content">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
